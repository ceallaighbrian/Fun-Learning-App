<% provide(:title, "Sign up") %>
<div class = "row">
<h1>Leaderboard</h1>
<h5>Click on any user to view  their profile.</h5>
</div>
<div class = "row">
  <div class ="col-md-6 col-md-offset-3">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Level</th>
        <th>Score</th>
      </tr>
      </thead>
      <tbody>
      <% i = 1 %>
      <% @user.sort_by{|u| u.score }.reverse.each do |u| %>
      <tr>
        <td><%= i %></td>
        <td><%= link_to "#{u.name}", user_path(u) %></td>
        <td><%= u.level_id %></td>
        <td><%= u.score  %></td>
      </tr>
          <% i += 1 %>
          <% end %>
          </tbody>
    </table>
  </div>
</div>